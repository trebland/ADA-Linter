{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "target": "ES2021",
    "module": "node16",
		"moduleResolution": "node16",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "./node_modules"
  ]
}